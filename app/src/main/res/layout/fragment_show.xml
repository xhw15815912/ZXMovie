<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:background="@mipmap/q"
            />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_location"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="24dp"
                android:src="@mipmap/com_icon_loc_white"/>
            <TextView
                android:id="@+id/text_positioningq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="aaaaa"
                android:textColor="#ffff"
                android:layout_marginLeft="10dp"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recommend_cinema_linear"
            android:layout_width="wrap_content"
            android:layout_marginRight="-195dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bk_radi9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_cinem_search_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:onClick="onClick"
                android:layout_marginRight="22dp"
                android:paddingLeft="6dp"
                android:src="@mipmap/com_icon_search" />


            <EditText
                android:id="@+id/recommend_cinema_edname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:ems="8"
                android:hint="无双"
                android:textColorHint="#FFF"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:textColor="#f2f2f2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recommend_cinema_textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:padding="1dp"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="12sp"
                 />
        </LinearLayout>
        <recycler.coverflow.RecyclerCoverFlow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/flow"
            android:layout_marginTop="70dp"
            ></recycler.coverflow.RecyclerCoverFlow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:layout_marginTop="350dp"
            >
         <RelativeLayout
             android:layout_width="match_parent"
             android:paddingRight="24dp"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/hot"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:layout_alignParentLeft="true"
                 android:text="热门电影"
                 android:textSize="16sp"
                 android:textColor="#333333"
                 />

             <View
                 android:layout_width="27dp"
                 android:layout_height="3dp"
                 android:layout_marginTop="24dp"
                 android:background="@drawable/bg_dividing_line_title_rectangle" />
             <ImageView
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:src="@mipmap/com_icon_next"
                 android:layout_alignParentRight="true"
                 />
         </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_marginTop="20dp"
                android:id="@+id/hotMove"
                android:layout_marginBottom="20dp"
                ></android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="24dp"
                >
                <TextView
                    android:id="@+id/now"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:text="正在热映"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    />
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_dividing_line_title_rectangle"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/com_icon_next"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:id="@+id/nowMove"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                ></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="24dp"
                >
                <TextView
                    android:id="@+id/soon"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:text="即将上映"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    />
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_dividing_line_title_rectangle"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/com_icon_next"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:id="@+id/soonMove"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>





    </RelativeLayout>
</ScrollView>