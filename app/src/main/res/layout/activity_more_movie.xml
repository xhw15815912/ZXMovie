<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="movie.bw.com.movie.activity.MoreMovie">

    <LinearLayout
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_white"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/com_icon_loc_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/address"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/image_white"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recommend_cinema_linear"
            android:layout_width="wrap_content"
            android:layout_marginRight="-210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bk_radi9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_cinem_search_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="6dp"
                android:src="@mipmap/com_icon_search" />


            <EditText
                android:id="@+id/recommend_cinema_edname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:ems="8"
                android:hint="无双"
                android:textColorHint="#FFF"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:textColor="#f2f2f2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recommend_cinema_textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="60dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/image"
        android:orientation="horizontal"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"

        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="83dp"
                android:layout_height="35dp"
                android:text="热门影片"
                android:id="@+id/hot"
                android:textSize="14sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="83dp"
                android:layout_height="35dp"
                android:text="正在热映"
                android:id="@+id/photo"

                android:textSize="14sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="83dp"
                android:layout_height="35dp"
                android:text="即将上映"
                android:id="@+id/comment"
                android:textSize="14sp"

                />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:id="@+id/xrecy"
        android:layout_marginTop="130dp"
        ></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_gravity="bottom"

        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_show"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/com_icon_my"
            />
    </RelativeLayout>
</RelativeLayout>
