<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/kuang_8dp_touying"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="铁血战士"/>
        <TextView
            android:id="@+id/begin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1111111111111111111111"
            android:textColor="#f77421"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/name"/>
         <TextView
             android:id="@+id/begin_name"
             android:layout_width="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_height="wrap_content"
             android:layout_below="@id/begin_time"
             android:textColor="#f77421"
             android:text="开始时间"/>
        <TextView
            android:id="@+id/end_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textColor="#f77421"
            android:layout_toRightOf="@id/begin_name"
            android:layout_below="@id/begin_time"
            android:text="开始时间"/>
        <TextView
            android:id="@+id/odd_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="订单号：1234567890000"
            android:layout_below="@id/begin_name"/>
        <TextView
            android:id="@+id/cinem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="影院：保利国际影城(龙旗广场店)"
            android:layout_below="@id/odd_hao"/>

        <TextView
            android:id="@+id/th_film_Office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cinem"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="影厅：中影|Do巨幕全景声听" />
        <TextView
            android:id="@+id/timea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="时间：2018-10-11 14:40-16:46"
            android:layout_below="@id/th_film_Office"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="数量：2"
            android:layout_below="@id/timea"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="金额：59.9元"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/number"/>
    </RelativeLayout>

</RelativeLayout>