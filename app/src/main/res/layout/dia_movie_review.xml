<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dia_shape"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="20dp"
        android:id="@+id/a"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影评"
            android:id="@+id/q"
            android:textSize="16sp"
            android:textColor="#333333"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_dividing_line_title_rectangle"
            android:layout_below="@id/q"
            />
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/com_icon_down"
            android:layout_alignParentRight="true"
            android:id="@+id/bak"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:id="@+id/recy"
        android:layout_marginTop="20dp"
        android:layout_below="@id/a"
        ></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_show"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/write"
            android:layout_centerVertical="true"
            android:src="@mipmap/com_icon_publish_default"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</RelativeLayout>