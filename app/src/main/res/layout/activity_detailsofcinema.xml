<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="movie.bw.com.movie.activity.DetailsofcinemaActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/q"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Layout_of_cinema"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="24dp" />

            <LinearLayout
                android:id="@+id/xin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="55dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFF" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="#FFFF" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/nava"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="24dp"
        android:src="@mipmap/com_icon_navigation" />

    <recycler.coverflow.RecyclerCoverFlow
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="140dp"></recycler.coverflow.RecyclerCoverFlow>
    <!--<RadioGroup-->
        <!--android:id="@+id/home_radio_group"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="2dp"-->
        <!--android:layout_below="@+id/flow"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@drawable/lineone"-->
        <!--android:orientation="horizontal"></RadioGroup>-->


    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/x_receycelview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/flow"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

    <ImageView
        android:id="@+id/finish"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/com_icon_my" />
</RelativeLayout>
