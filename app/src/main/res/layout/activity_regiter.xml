<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/aa"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_name"
                    android:background="@null"
                    android:hint="昵称"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_name" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_1"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/image_sex"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_sex" />
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别："
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#FFF"
                    android:layout_toRightOf="@id/image_sex"/>
                <RadioGroup
                    android:id="@+id/rag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/nan"
                        android:textColor="#FFF"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/MyCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"/>
                    <RadioButton
                        android:id="@+id/nv"
                        android:textColor="#FFF"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/MyCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"/>
                </RadioGroup>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_2"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/edit_dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_dateofbirth"
                    android:background="@null"
                    android:hint="出生日期"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_dateofbirth"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_date" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_3"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_phone"
                    android:background="@null"
                    android:hint="手机号"
                    android:maxLength="11"
                    android:digits="1234567890"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/log_icon_phone" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_4"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_postbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_postbox"
                    android:background="@null"
                    android:hint="邮箱"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_postbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_mail" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_5"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_loginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_loginpassword"
                    android:background="@null"
                    android:hint="登录密码"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_loginpassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/log_icon_lock" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_6"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_regiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/reg_bg"
            android:text="注册"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>