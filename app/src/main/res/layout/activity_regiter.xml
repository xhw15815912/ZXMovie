<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/aa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_name"
                    android:background="@null"
                    android:hint="昵称"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_name" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_1"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_sex"
                    android:background="@null"
                    android:hint="性别"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_sex"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_sex" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_2"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_dateofbirth"
                    android:background="@null"
                    android:hint="出生日期"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_dateofbirth"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_date" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_3"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_phone"
                    android:background="@null"
                    android:hint="手机号"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/log_icon_phone" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_4"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_postbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_postbox"
                    android:background="@null"
                    android:hint="邮箱"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_postbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/register_icon_mail" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_5"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relative_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_loginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/image_loginpassword"
                    android:background="@null"
                    android:hint="登录密码"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/image_loginpassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/log_icon_lock" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_6"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_regiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/reg_bg"
            android:text="注册"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>