<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/buy_piao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购票信息"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/buy_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_piao"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="13:00"
        android:textSize="12sp" />

    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/buy_coontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buy_time"
        android:text="您已成功订购两张电影票"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buy_coontent"
        android:layout_marginTop="10dp"
        android:background="#F2f2f2"></View>


</RelativeLayout>