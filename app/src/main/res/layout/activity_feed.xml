<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="movie.bw.com.movie.activity.FeedActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:text="意见反馈"/>
    <ImageView
        android:id="@+id/chang"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/feed"
        android:layout_marginTop="140dp"
        />
    <TextView
        android:id="@+id/chongg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="反馈成功"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/chang"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_height="wrap_content"
        android:text="感谢您对维度影院的关注与支持，我们会认真处理您的反馈，尽快修复和完善相关功能"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/chongg"/>
    <ImageView
        android:id="@+id/fan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/com_icon_my"/>
</RelativeLayout>
